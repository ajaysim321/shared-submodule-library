{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "cli": {
    "packageManager": "npm",
    "analytics": false
  },
  "newProjectRoot": "libraries",
  "projects": {

      "my-shared-lib": {
      "projectType": "library",
      "root": "libraries/my-shared-lib",
      "sourceRoot": "libraries/my-shared-lib/src",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "project": "libraries/my-shared-lib/ng-package.json"
          }
        }
      }
    }
  }
}
